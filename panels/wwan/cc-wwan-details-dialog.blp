using Gtk 4.0;
using Adw 1;

template $CcWwanDetailsDialog: Adw.Dialog {
  title: _("Modem Details");
  height-request: 480;
  width-request: 360;

  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {}

    content: Adw.PreferencesPage {
      Adw.PreferencesGroup {
        title: _("Modem Status");

        $CcListRow operator_name {
          title: _("Carrier");

          styles [
            "property",
          ]
        }

        $CcListRow network_type {
          title: _("Network Type");

          styles [
            "property",
          ]
        }

        $CcListRow signal_strength {
          title: _("Signal Strength");

          styles [
            "property",
          ]
        }

        $CcListRow network_status {
          title: _("Network Status");

          styles [
            "property",
          ]
        }

        $CcListRow own_numbers {
          title: _("Own Number");

          styles [
            "property",
          ]
        }
      }

      Adw.PreferencesGroup {
        title: _("Device Details");

        $CcListRow manufacturer {
          title: _("Manufacturer");

          styles [
            "property",
          ]
        }

        $CcListRow device_model {
          title: _("Model");

          styles [
            "property",
          ]
        }

        $CcListRow firmware_version {
          title: _("Firmware Version");

          styles [
            "property",
          ]
        }

        $CcListRow device_identifier {
          title: _("IMEI");

          styles [
            "property",
          ]
        }
      }
    };
  }
}
