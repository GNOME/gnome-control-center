<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="CcBoltDeviceDialog" parent="AdwDialog">
    <property name="title" translatable="yes">Device Identifier</property>
    <property name="content-width">480</property>
    <property name="content-height">360</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar"/>
        </child>
        <child>
          <object class="AdwToastOverlay" id="toast_overlay">
            <child>
              <object class="AdwPreferencesPage">
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwActionRow" id="status_row">
                        <property name="title" translatable="yes">Status</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="uuid_row">
                        <property name="title" translatable="yes">UUID</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="time_row">
                        <property name="title" translatable="yes">Timestamp</property>
                        <style>
                          <class name="property"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup" id="parents_group">
                    <property name="visible">False</property>
                    <property name="title" translatable="yes">Depends on other devices</property>
                    <child>
                      <object class="GtkListBox" id="parents_devices"/>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwSpinner" id="spinner">
                        <property name="visible">False</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwButtonRow" id="connect_button">
                        <property name="title" translatable="yes">Authorize and Connect</property>
                        <property name="receives_default">True</property>

                        <signal name="activated"
                                handler="on_connect_button_clicked_cb"
                                object="CcBoltDeviceDialog"
                                swapped="yes" />
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwButtonRow" id="forget_button">
                        <property name="title" translatable="yes">Forget Device</property>
                        <property name="receives_default">False</property>
                        <signal name="activated"
                                handler="on_forget_button_clicked_cb"
                                object="CcBoltDeviceDialog"
                                swapped="yes" />
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
