using Gtk 4.0;

template $CEPageBluetooth: Grid {
  margin-start: 50;
  margin-end: 50;
  margin-top: 12;
  margin-bottom: 12;
  hexpand: true;
  vexpand: true;
  row-spacing: 10;
  column-spacing: 6;

  Label {
    xalign: 1;
    label: _("_Name");
    use-underline: true;
    mnemonic-widget: name_entry;

    layout {
      column: 0;
      row: 0;
    }
  }

  Entry name_entry {
    layout {
      column: 1;
      row: 0;
    }
  }
}
